@{
    CoffeeShop.DB.Users logonuser = (CoffeeShop.DB.Users)Session["OnlineUser"];
}
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>MadCap Coffee</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free Website Template" name="keywords">
    <meta content="Free Website Template" name="description">

    <!-- Favicon -->
    <link href="~/Content/img/favicon.ico" rel="icon">

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;400&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Content/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/css/style.min.css" rel="stylesheet">


</head>
<body>

    <!-- Menü -->

    <div class="container-fluid p-0 nav-bar">
        <nav class="navbar navbar-expand-lg bg-none navbar-dark py-3">
            <a href="~/Home/Index" class="navbar-brand px-lg-4 m-0">
                <h1 class="m-0 text-uppercase text-white">MadCap Coffee</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav ml-auto p-4">
                    <a href="~/Home/Index" class="nav-item nav-link active">Anasayfa</a>
                    <a href="~/Home/About" class="nav-item nav-link">Hakkımızda</a>
                    <a href="~/Home/Service" class="nav-item nav-link">Servislerimiz</a>
                    <a href="~/Home/Menu" class="nav-item nav-link">Menü</a>
                    <a href="~/Home/Contact" class="nav-item nav-link">İletişim</a>
                    @if (Session["OnlineUser"] == null)
                    {
                        <a href="~/Home/LoginPage" class="nav-item nav-link">Giriş</a>
                        <a href="~/Home/Register" class="nav-item nav-link">Kayıt Olun</a>
                    }
                    @if (Session["OnlineUser"] != null)
                    {
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle btn btn-primary" data-toggle="dropdown">Hoşgeldin @($"{logonuser.Fullname}")</a>
                            <div class="dropdown-menu text-capitalize">
                                <a href="~/Home/SaveBasket" class="dropdown-item">Sepetim</a>
                                <a href="~/Home/Logout" class="dropdown-item">Çıkış</a>
                            </div>
                        </div>

                    }

                        @if (Session["OnlineAdmin"] != null)
                        {
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Yönetim Paneli</a>
                                <div class="dropdown-menu text-capitalize">
                                    <a href="~/Home/Admin" class="dropdown-item">Kahveler</a>

                                    <a href="~/Home/Orders" class="dropdown-item">Siparişler</a>
                                    <a href="~/Home/Logout" class="dropdown-item">Çıkış</a>
                                </div>
                            </div>
                        }


                    </div>
            </div>
        </nav>
    </div>
    

    @RenderBody()

    <!-- Footer -->

    <div class="container-fluid footer text-white mt-5 pt-5 px-0 position-relative overlay-top">
        <div class="row mx-0 pt-5 px-sm-3 px-lg-5 mt-4">
            <div class="col-lg-3 col-md-6 mb-5">
                <h4 class="text-white text-uppercase mb-4" style="letter-spacing: 3px;">  İletişim </h4>
                <p><i class="fa fa-map-marker-alt mr-2"></i> Tuzla/İstanbul </p>
                <p><i class="fa fa-phone-alt mr-2"></i>0216 399 4395</p>
                <p class="m-0"><i class="fa fa-envelope mr-2"></i>info@MadCapCoffee.com.tr</p>
            </div>
            <div class="col-lg-3 col-md-6 mb-5">
                <h4 class="text-white text-uppercase mb-4" style="letter-spacing: 3px;">Bizi Takip Et</h4>
                <p>Sosyal medyadan bizi takip et. İndirimleri Kaçırma!</p>
                <div class="d-flex justify-content-start">
                    <a class="btn btn-lg btn-outline-light btn-lg-square mr-2" href="#"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-lg btn-outline-light btn-lg-square mr-2" href="#"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-lg btn-outline-light btn-lg-square mr-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                    <a class="btn btn-lg btn-outline-light btn-lg-square" href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-5">
                <h4 class="text-white text-uppercase mb-4" style="letter-spacing: 3px;">Çalışma Saatlerimiz</h4>
                <div>
                    <h6 class="text-white text-uppercase">Pazartesi - Cuma</h6>
                    <p>09:00 - 22:00</p>
                    <h6 class="text-white text-uppercase">Saturday - Sunday</h6>
                    <p>09:00 - 00:00</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-5">
                <h4 class="text-white text-uppercase mb-4" style="letter-spacing: 3px;">Abone Ol</h4>
                <p>İndirimleri ve avantajları takip etmek için mail aboneliği yapabilirsiniz.</p>
                <div class="w-100">
                    <div class="input-group">
                        <input type="text" class="form-control border-light" style="padding: 25px;" placeholder="Email Adresiniz">
                        <div class="input-group-append">
                            <button class="btn btn-primary font-weight-bold px-3">Kayıt Ol</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid text-center text-white border-top mt-4 py-4 px-sm-3 px-md-5" style="border-color: rgba(256, 256, 256, .1) !important;">
            <p class="mb-2 text-white"> &copy; 2023 <a class="font-weight-bold" href="#">Sonsuz Aroma LTD. ŞTİ.</a> Her Hakları Saklıdır</a></p>

        </div>
    </div>
    
    <!-- En Yukarı Çık -->

    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/lib/easing/easing.min.js"></script>
    <script src="~/Content/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Content/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Content/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/Content/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/Content/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Contact Javascript File -->

    <script src="~/Content/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/Content/mail/contact.js"></script>

    <!-- Template Javascript -->

    <script src="~/Content/js/main.js"></script>



    @RenderSection("scripts", false);


</body>

</html>