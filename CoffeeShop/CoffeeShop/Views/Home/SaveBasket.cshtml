@model CoffeeShop.Models.BasketModel
@{
    ViewBag.Title = "SaveBasket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Sayfa Başlığı -->

<div class="container-fluid page-header mb-5 position-relative overlay-bottom">
    <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5" style="min-height: 400px">
        <h1 class="display-4 mb-3 mt-0 mt-lg-5 text-white text-uppercase">Sepet</h1>

    </div>
</div>

<!-- Sepet -->

<div class="container">
    <h1 class="text-center"> Sepet</h1>
    @if (Model != null)
    {

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Ürün Fotoğrafı</th>
                    <th scope="col">Ürün İsmi</th>
                    <th scope="col">Ürün Fiyatı</th>
                    <th scope="col"> Adet </th>
                    <th scope="col"> Sil </th>
                </tr>
            </thead>
            <tbody>

                @{ int counter = 0; }

                @foreach (var item in Model.SepetModel)
                {
                    var kahve = Model.CofeeModel.FirstOrDefault(c => c.Id == item.CofeeId);
                    if (kahve != null)
                    {
                        <tr>
                            <th scope="row"><img src="~/@kahve.CofeeImagePath" style="width:50px;height:50px;border-radius:40px" alt="Alternate Text" /></th>
                            <td>@kahve.CofeeName</td>
                            <td>(@kahve.CofeePrice ₺)</td>
                            <td>
                                <p>@item.number adet</p>
                            </td>
                            <td>   <a href="~/Home/DeleteKahve?id=@item.Id" class="btn btn-danger"> Sil </a> </td>
                        </tr>
                    }
                }

            </tbody>
        </table>


        <h4> Toplam Fiyat:  @ViewBag.tp ₺ </h4>
        <div class="col-lg-3">
            <div class="form-group">
                <br /><a href="~/Home/Menu" style=" background-color: #38c15c; color: white;" class="dropdown-item">Alışverişe Devam Et</a>
            </div>
        </div>
            }

        </div>

<!-- Sipariş Onayı -->

<div class="container-fluid py-5">
    <div class="container">
        <div class="reservation position-relative overlay-top overlay-bottom">
            <div class="row align-items-center">
                <div class="col-lg-6 my-5 my-lg-0">
                    <div class="p-5">
                        <div class="mb-4">

                            <h1 class="text-white">Sepet</h1>
                          

                        </div>


                    </div>
                </div>

                @using (Html.BeginForm("SaveBasket", "Home", FormMethod.Post))
                {
                    <div class="mb-5" style="width:100%">
                        <div class="col-lg-12">
                            <div class="text-center p-5" style="background: rgba(51, 33, 29, .8);">

                                <input type="hidden" name="totalprice" value="@ViewBag.tp" />

                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent border-primary p-4" name="name" placeholder="İsim Soyisim"
                                           required="required" />
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent border-primary p-4" name="address" placeholder="Adres"
                                           required="required" />
                                </div>




                     

                                <div>
                                    <button class="btn btn-primary btn-block font-weight-bold py-3" type="submit">Sipariş Ver</button>
                                </div>

                            </div>
                        </div>
                    </div>
                }



            </div>
        </div>
    </div>
</div>
